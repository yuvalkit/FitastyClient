        <ImageView
            android:id="@+id/minAmountInputEraseButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/nutritionFactsFilterMinAmountValue"
            app:layout_constraintTop_toBottomOf="@+id/proteinInputEraseButton"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/proteinInputEraseButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/nutritionFactsFilterProteinValue"
            app:layout_constraintTop_toBottomOf="@+id/fiberInputEraseButton"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/fiberInputEraseButton"
            android:layout_width="30dp"
            android:layout_height="30dp"

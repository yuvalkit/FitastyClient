            app:layout_constraintStart_toEndOf="@+id/nutritionFactsFilterFiberValue"
            app:layout_constraintTop_toBottomOf="@+id/carbInputEraseButton"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
